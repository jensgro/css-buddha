---
layout: base.njk
---
<main>
	<article class=" container post-article">
		{% if lead %}
		<p class="lead">{{ lead }}</p>
		{% endif %}
		{{ content | safe }}
		{% if tags %}
			{% include "partials/tags.njk" %}
		{% endif %}
		{% if source %}
			<div class="source"><a href="{{source.url | url}}">{{source.name}}</a></div>	
		{% endif %}
		{% if linktipp %}
			{% include "partials/linktipp.njk" %}
		{% endif %}
	</article>
</main>
