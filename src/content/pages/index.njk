{%- for item in categories %}
<section>
  <div class="container">
    <h2>{{ item.title }}</h2>

    {% if "notes" in item.cat %}
      {% for post in collections.getAllNotes %}
        {% include "partials/simple-list.njk" %}
      {% endfor %}
    {% endif %}

    {% if "post" in item.cat %}
      {% for post in collections.getAllPosts %}
        {% include "partials/simple-list.njk" %}
      {% endfor %}
    {% endif %}

  </div>
</section>
{% endfor -%}
