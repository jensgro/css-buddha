    "markdown-it-mark": "^4.0.0",
    "markdown-it-prism": "^2.3.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "rimraf": "^5.0.5",
