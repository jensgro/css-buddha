    "@11ty/eleventy": "^2.0.0",
    "@11ty/eleventy-navigation": "^0.3.5",
    "@11ty/eleventy-plugin-rss": "^1.2.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.2.0",
    "autoprefixer": "^10.4.13",
    "bootstrap": "^5.2.3",
    "cross-env": "^7.0.3",
    "cssnano": "^5.1.15",
    "cssremedy": "^0.1.0-beta.2",
    "holiday.css": "^0.9.8",
    "markdown-it": "^13.0.1",
